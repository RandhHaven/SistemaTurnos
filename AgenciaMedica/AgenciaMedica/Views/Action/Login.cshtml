@model AgenciaMedica.Models.Usuario
@{
    ViewBag.Title = "Ingreso";
}

@Styles.Render("~/Content/css")
@Styles.Render("~/Imagenes/jpg")
@Scripts.Render("~/bundles/modernizr")

<div>
    @using (Html.BeginForm("Ingresar", "Action", FormMethod.Post))
    {       
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <h1> Ingrese al Sistema </h1>
                <form class="form-horizontal">
                    <div class="form-group">
                        @Html.Label("Usuario: ", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(m => m.User, new { @class = "col-lg-9 form-control" })
                            @Html.ValidationMessageFor(m => m.User, "Ingrese el usuario.", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Password: ", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(m => m.Password, new { @class = "col-lg-9 form-control", Type = "password" })
                            @Html.ValidationMessageFor(m => m.Password, "Ingrese la contraseña", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            <a> @Html.ActionLink("Olvidò su Contraseña.", "Registro", "Action", new { @class = "col-lg-12" }) </a>
                        </div>
                    </div>
                    
                    <div >
                        <input class="btn-ingresar col-lg-3" ; type="submit" name="btnSubmit" value="Ingresar" />
                    </div>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    }
</div>